---
import SiteLogo from "./SiteLogo.astro";
import avatar from "@/assets/img/image-avatar.jpg";
import ThemeIcon from "./ThemeIcon";
---

<nav class="flex h-full items-center justify-between bg-navbar">
	<a href="/">
		<SiteLogo />
	</a>
	<ThemeIcon client:only="react" />
	<div
		class="flex items-center self-stretch border-l border-l-white border-opacity-20 px-4"
	>
		<img src={avatar.src} alt="user avatar" class="h-9 w-9 rounded-full" />
	</div>
</nav>
